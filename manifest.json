{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "{8845E3B3-E8FB-40E2-95E9-EC40294818C4}",
      "strict_min_version": "102.0",
      "strict_max_version": "115.*"
    }
  },
  "name": "Quicktext",
  "version": "5.7",
  "author": "John Bieling",
  "homepage_url": "https://github.com/jobisoft/quicktext",
  "default_locale": "en-US",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "16": "chrome/skin/icon16.png",
    "24": "chrome/skin/icon24.png",
    "32": "chrome/skin/icon.png"
  },
  "compose_action": {
    "default_title": "Quicktext",
    "default_label": "",
    "default_icon": {
      "16": "chrome/skin/icon16.png",
      "24": "chrome/skin/icon24.png",
      "32": "chrome/skin/icon.png"
    }
  },
  "browser_action": {
    "default_title": "Quicktext",
    "default_label": "",
    "default_icon": {
      "16": "chrome/skin/icon16.png",
      "24": "chrome/skin/icon24.png",
      "32": "chrome/skin/icon.png"
    }
  },
  "permissions": [
    "storage",
    "menus"
  ],
  "background": {
    "scripts": [
      "/scripts/preferences.js",
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "experiment_apis": {
    "Quicktext": {
      "schema": "api/Quicktext/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "Quicktext"
          ]
        ],
        "script": "api/Quicktext/implementation.js"
      }
    },
    "LegacyPrefs": {
      "schema": "api/LegacyPrefs/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "LegacyPrefs"
          ]
        ],
        "script": "api/LegacyPrefs/implementation.js"
      }
    },
    "NotifyTools": {
      "schema": "api/NotifyTools/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "NotifyTools"
          ]
        ],
        "script": "api/NotifyTools/implementation.js",
        "events": [
          "startup"
        ]
      }
    }
  }
}
